<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mirroring.activities">


    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.mirroring.units.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/dmzj_tool_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/dmzj_tool_icon_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name="com.mirroring.activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ChooseChapterActivity" />
    </application>

</manifest>